    <servlet>
        <servlet-name>stu_Change_InformationServlet</servlet-name>
        <servlet-class>com.controller.stu_Change_InformationServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>find_All_PeopleServlet</servlet-name>
        <servlet-class>com.controller.find_All_PeopleServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>rand_Titles_For_ExamServlet</servlet-name>
        <servlet-class>com.controller.rand_Titles_For_ExamServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>exam_GradeServlet</servlet-name>
        <servlet-class>com.controller.exam_GradeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>add_In_GradeServlet</servlet-name>
        <servlet-class>com.controller.add_In_GradeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>tea_Find_All_GradeServlet</servlet-name>
        <servlet-class>com.controller.tea_Find_All_GradeServlet</servlet-class>
    </servlet>
    w<servlet>
        <servlet-name>find_Grade_By_IdServlet</servlet-name>
        <servlet-class>com.controller.find_Grade_By_IdServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>find_Stu_By_IdServlet</servlet-name>
        <servlet-class>com.controller.find_Stu_By_IdServlet</servlet-class>
    </servlet>
<!--    通过 id 查询学生的基本信息-->
    <servlet-mapping>
        <servlet-name>find_Stu_By_IdServlet</servlet-name>
        <url-pattern>/find_Stu_By_Id</url-pattern>
    </servlet-mapping>
    <!--    教师端通过学生id查询学生所有成绩-->
    <servlet-mapping>
        <servlet-name>find_Grade_By_IdServlet</servlet-name>
        <url-pattern>/find_Grade_By_Id</url-pattern>
    </servlet-mapping>
    <!--    教师查询所有学生成绩-->
    <servlet-mapping>
        <servlet-name>tea_Find_All_GradeServlet</servlet-name>
        <url-pattern>/tea_Find_All_Grade</url-pattern>
    </servlet-mapping>
    <!--    将学生成绩添加进grade-->
    <servlet-mapping>
        <servlet-name>add_In_GradeServlet</servlet-name>
        <url-pattern>/add_In_Grade</url-pattern>
    </servlet-mapping>
    <!--    得到考试分数-->
    <servlet-mapping>
        <servlet-name>exam_GradeServlet</servlet-name>
        <url-pattern>/exam_Grade</url-pattern>
    </servlet-mapping>
    <!--    随机出题注册-->
    <servlet-mapping>
        <servlet-name>rand_Titles_For_ExamServlet</servlet-name>
        <url-pattern>/rand_Titles_For_Exam</url-pattern>
    </servlet-mapping>
    <!--    寻找所有人信息-->
    <servlet-mapping>
        <servlet-name>find_All_PeopleServlet</servlet-name>
        <url-pattern>/find_All_People</url-pattern>
    </servlet-mapping>
    <!--    学生修改自己信息-->
    <servlet-mapping>
        <servlet-name>stu_Change_InformationServlet</servlet-name>
        <url-pattern>/stu_Change_Information</url-pattern>
    </servlet-mapping>
    <!--注册监听器-->
    <listener>
        <listener-class>com.listener.connListener</listener-class>
    </listener>
    <!--    单道题目查询-->
    <servlet-mapping>
        <servlet-name>find_title_by_idServlet</servlet-name>
        <url-pattern>/find_title_by_id</url-pattern>
    </servlet-mapping>
    <!--    题目修改-->
    <servlet-mapping>
        <servlet-name>change_Title_InformationServlet</servlet-name>
        <url-pattern>/change_Title_Information</url-pattern>
    </servlet-mapping>
    <!--    所有题目查询-->
    <servlet-mapping>
        <servlet-name>find_All_TitlesServlet</servlet-name>
        <url-pattern>/find_All_Titles</url-pattern>
    </servlet-mapping>
    <!--      添加题目-->
    <servlet-mapping>
        <servlet-name>tea_AddTitleServlet</servlet-name>
        <url-pattern>/tea_AddTitle</url-pattern>
    </servlet-mapping>
    <!--    学生注册-->
    <servlet-mapping>
        <servlet-name>student_RegisterServlet</servlet-name>
        <url-pattern>/student_Register</url-pattern>
    </servlet-mapping>
    <!--  教师修改学生教师信息-->
    <servlet-mapping>
        <servlet-name>tea_change_all_people_informationServlet</servlet-name>
        <url-pattern>/tea_change_all_people_information</url-pattern>
    </servlet-mapping>
    <!--    查询所有学生-->
    <servlet-mapping>
        <servlet-name>find_stu_or_teaServlet</servlet-name>
        <url-pattern>/find_stu_or_tea</url-pattern>
    </servlet-mapping>
    <!--    province注册-->
    <servlet-mapping>
        <servlet-name>provinceServlet</servlet-name>
        <url-pattern>/province</url-pattern>
    </servlet-mapping>
    <!--    city注册-->
    <servlet-mapping>
        <servlet-name>cityServlet</servlet-name>
        <url-pattern>/city</url-pattern>
    </servlet-mapping>
    <!--    test注册-->
    <servlet-mapping>
        <servlet-name>TestServlet</servlet-name>
        <url-pattern>/test</url-pattern>
    </servlet-mapping>
    <!--    login登录注册-->
    <servlet-mapping>
        <servlet-name>loginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <!--&lt;!&ndash;    设置默认资源欢迎文件&ndash;&gt;-->
    <welcome-file-list>
        <welcome-file>main.html</welcome-file>
    </welcome-file-list>
