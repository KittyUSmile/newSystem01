        <servlet-class>com.controller.student_RegisterServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>tea_AddTitleServlet</servlet-name>
        <servlet-class>com.controller.tea_AddTitleServlet</servlet-class>
    </servlet>
    <servlet>
