        <servlet-class>com.controller.cityServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>provinceServlet</servlet-name>
        <servlet-class>com.controller.provinceServlet</servlet-class>
    </servlet>
    <servlet>
