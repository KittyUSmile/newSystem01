        <servlet-class>com.controller.teacher_RegisterServlet</servlet-class>
    </servlet>
    <!--    教师register页面注册-->
    <servlet-mapping>
        <servlet-name>teacher_RegisterServlet</servlet-name>
        <url-pattern>/teacher_Register</url-pattern>
    </servlet-mapping>
    <servlet>
